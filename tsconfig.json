{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": ".",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@server": ["./server/index.ts"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "docs"]
}